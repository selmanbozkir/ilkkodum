#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    
    int a,b,c;
    cout << "a kenarini giriniz: ";
    cin >> a;
    cout << "b kenarini giriniz: ";
    cin >> b;
    c = sqrt(a*a+b*b);
    cout << " cevre:" << a+b+c << endl;
    cout << " alan:" << a*b/2 << endl;
    
    return 0;
    
}